<% if @tweet.errors.any? %>
	<ul class="error-messages">
		<% @tweet.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for(@tweet) do |f| %>

	<p class="tweet-form">
		<%= f.label(:title) %>
		<%= f.text_field(:title, placeholder: 'Enter title here') %>
	</p>

	<p class="tweet-form">
		<%= f.label(:body) %>
		<%= f.text_field(:body, placeholder: 'Enter body here') %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>